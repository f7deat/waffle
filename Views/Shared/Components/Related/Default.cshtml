@using Waffle.Models.Catalogs
@model IEnumerable<ArticleListItem>

<div class="title">Bài viết liên quan</div>
<div class="md:grid grid-cols-4 gap-4 mb-4">
    @foreach (var item in Model)
    {
        <div class="bg-white shadow">
            <a href="/article/@item.NomalizedName" title="@item.Name" class="wf-card-img-wrap">
                <img src="@item.Thumbnail" loading="lazy" class="w-full object-fit-cover" alt="@item.Name" height="220" />
            </a>
            <div class="p-2">
                <a href="/article/@item.NomalizedName" title="@item.Name"><b>@item.Name</b></a>
                <div class="wf-article-item__body-description">
                    @item.Description
                </div>
            </div>
            <div class="card-footer">
                <div>
                    <small class="mr-2">
                        <i class="fas fa-clock"></i>
                        @item.ModifiedDate
                    </small>
                    <small>
                        <i class="fa fa-eye"></i> @(item.ViewCount.ToString("N0"))
                    </small>
                </div>
                <div class="dropdown">
                    <button type="button" class="btn-share" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Share"><i class="fa fa-share-alt"></i></button>
                    <ul class="dropdown-menu p-0 border-0 shadow">
                        <li>
                            <a class="dropdown-item" data-title="Twitter" href="https://twitter.com/share?url=@($"/article/{item.NomalizedName}")" rel="nofollow" target="_blank">
                                <i class="fab fa-twitter"></i>
                                <span>Twitter</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" data-title="Facebook" href="https://www.facebook.com/sharer.php?u=@($"/article/{item.NomalizedName}")" rel="nofollow" target="_blank">
                                <i class="fab fa-facebook"></i>
                                <span>Facebook</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" data-title="Pinterest" href="https://pinterest.com/pin/create/button/?url=@($"/article/{item.NomalizedName}")" rel="nofollow" target="_blank">
                                <i class="fab fa-pinterest"></i>
                                <span>Pinterest</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>