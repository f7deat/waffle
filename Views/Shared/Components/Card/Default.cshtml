@using Waffle.Models.Components
@model Card

<div class="card wf-card">
    @if (Model.Image != null)
    {
        <div class="wf-card-img">
            <img src="@Model.Image.Url" class="wf-card-img-top" alt="@Model.Title">
        </div>
    }
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Html.Raw(Model.Text)</p>
    </div>
</div>
