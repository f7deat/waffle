@using Waffle.Models.Components
@model Header

<header class="wf-header">
    <nav class="navbar shadow">
        <div class="container flex h-full items-center justify-between">
            <div class="md:hidden flex justify-end">
                <button type="button" class="py-3 px-4 navbar-toggler" aria-label="Navigation bars">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
            <a class="font-bold text-xl inline-block px-4" href="/"><i class="fa fa-shield-alt"></i> DefZone.Net</a>
            <div class="flex px-2">
                <form class="hidden md:flex items-center rounded-full px-3 gap-2 search-input" action="/search/index" method="get">
                    <input class="h-full py-2 rounded-full w-64" type="text" placeholder="Nhập từ khóa" aria-label="Search" name="searchTerm" autocomplete="off">
                    <button class="flex items-center justify-center rounded-full" type="submit" aria-label="Tìm kiếm"><i class="fa fa-search"></i></button>
                </form>
                <a href="/search" class="md:hidden navbar-icon" aria-label="Search">
                    <i class="fas fa-search"></i>
                </a>
                <button type="button" class="navbar-icon" aria-label="Dark mode">
                    <i class="fas fa-cloud-sun"></i>
                </button>
                @if (Model.IsAuthenticated)
                {
                    <a href="/user" class="navbar-icon h-10 w-10 flex items-center justify-center text-dark">
                        <i class="fas fa-user"></i>
                    </a>
                }
            </div>
        </div>
    </nav>
</header>