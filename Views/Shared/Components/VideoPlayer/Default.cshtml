@using Waffle.Models.Components.Specifications
@model VideoPlayer

<div class="video-player mb-4">
    @if (Model.Format == VideoPlayerFormat.YouTube)
    {
        <iframe class="w-full iframe-height" src="https://www.youtube.com/embed/@Model.EmbedId?controls=0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    }
    else
    {
        <div hidden>Video player format not supported</div>
    }
</div>