@using Waffle.Models.Components.Lister
@model VideoPlayList

<div class="@Model.ClassName">
    <div class="mb-4 video-playlist">
        <div class="title"><i class="fas fa-video mr-1"></i>@Model.Title</div>
        <div class="grid grid-cols-4 gap-4">
            @foreach (var item in Model.PlaylistItems)
            {
                <div class="playlist-item">
                    <div class="bg-gray-900 relative">
                        <a href="@item.Url" class="thumbnail">
                            <img src="@item.Thumbnail" alt="@item.Name" class="w-full object-fit-cover" />
                        </a>
                    </div>
                    <div class="py-2">
                        <div class="font-medium mb-2">
                            <a href="@item.Url">@item.Name</a>
                        </div>
                        <div class="text-sm text-gray-500 flex gap-2">
                            <div>
                                <i class="fas fa-calendar mr-1"></i>
                                <span>@item.Date</span>
                            </div>
                            <div>
                                <i class="fas fa-eye mr-1"></i>
                                <span>@item.ViewCount</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>