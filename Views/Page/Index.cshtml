@using Waffle.Models
@{
    var data = ViewBag.Data as PageVewModel;
}

@if (data != null)
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
            <li class="breadcrumb-item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                <a href="/" itemprop="item">
                    <span itemprop="name">Home</span>
                </a>
                <meta itemprop="position" content="1" />
            </li>
            <li class="breadcrumb-item active" aria-current="page" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                <a href="/@data.NormalizedName" itemprop="item">
                    <span itemprop="name">@data.Name</span>
                </a>
                <meta itemprop="position" content="2" />
            </li>
        </ol>
    </nav>

    <div class="@(data.Settings.Container ? "container" : "container-fluid") wf-catalog" id="catalog">

        <h1 class="h1 wf-h1">@data.Settings.Title</h1>

        @foreach (var item in data.ComponentListItems)
        {
            @await Component.InvokeAsync(item.Name, item.Id)
        }
    </div>
}