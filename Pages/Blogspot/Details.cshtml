@page "/blogspot/{normalizedName}/{year}/{month}/{path}"
@using Waffle.Models.Components
@model Waffle.Pages.Blogspot.DetailsModel

@if (Model.Item != null)
{
    <div class="container">
        @await Component.InvokeAsync(nameof(Breadcrumb), Model.PageData.Id)

        <div class="shadow mb-4 bg-white rounded">
            <div class="title">@Model.Item.Title</div>
            <div class="p-4">
                @Html.Raw(Model.Item.Content)
            </div>
        </div>
    </div>
}