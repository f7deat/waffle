@using Waffle.Extensions;
@using Waffle.Models.Components
@model ProductSpotlight

<div class="mb-4 product-spotlight">
    <div class="title">Chúng tôi bán</div>
    <div class="bg-white">
        <div class="row">
            @foreach (var item in Model.Products)
            {
                <div class="col-6">
                    <div class="card-image bg-dark">
                        <a href="@(item.GetUrl())">
                            <img src="@item.Thumbnail" alt="@item.Name" class="object-cover product-thumbnail" loading="lazy" />
                        </a>
                    </div>
                    <div class="py-2">
                        <a href="@(item.GetUrl())" class="line-clampin">
                            @item.Name
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>