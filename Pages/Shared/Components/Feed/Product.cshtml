@using System.Globalization;
@using Waffle.Extensions;
@using Waffle.Models.Components
@inject IConfiguration Configuration
@model Feed
@{
    var language = Configuration.GetValue<string>("language") ?? "en-US";
    var cul = new CultureInfo(language);
}

<div class="mb-4 feed">
    <div class="title">
        <span>
            @Model.Name
        </span>
        <a href="/products/list" aria-label="Xem thêm">
            <i class="fas fa-angle-double-right"></i>
        </a>
    </div>
    <div class="row">
        @foreach (var item in Model.Products)
        {
            <div class="col-6 col-md-3">
                <a href="@item.Url">
                    <div class="card-image bg-dark relative">
                        <img src="@item.Thumbnail" alt="@item.Name" class="object-cover product-thumbnail" loading="lazy" />
                        @if (item.Price != null && item.SalePrice != null)
                        {
                            <span class="badge bg-danger position-absolute top-0 end-0">
                                <span>GIẢM</span>
                                @(100 - Math.Round((item.SalePrice / item.Price ?? 0) * 100))%
                            </span>
                        }
                    </div>
                </a>
                <div class="py-2">
                    <div class="mb-1 d-flex justify-between">
                        <div>
                            <span class="text-danger fw-medium">@item.SalePrice?.ToString("C0", cul)</span>
                            <s class="text-muted text-sm">@item.Price?.ToString("C0", cul)</s>
                        </div>
                        <div class="text-warning text-xs">
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                        </div>
                    </div>
                    <a href="@item.Url" class="line-clampin">
                        @item.Name
                    </a>
                </div>
            </div>
        }
    </div>
</div>