@using Waffle.Models.Components
@model Feed

<div class="mb-4 feed">
    <div class="title">@Model.Name</div>
    <div class="grid @Model.ItemPerRow gap-4">
        @foreach (var item in Model.Articles)
        {
            <div class="bg-white">
                <div class="card-image">
                    <img src="@item.Thumbnail" alt="@item.Name" class="object-cover" loading="lazy" />
                </div>
                <div class="py-2">
                    <a href="@($"/products/{item.NormalizedName}")" class="line-clampin">
                        @item.Name
                    </a>
                </div>
            </div>
        }
    </div>
</div>