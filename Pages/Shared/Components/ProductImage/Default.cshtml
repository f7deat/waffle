@using Waffle.Models.Components
@model ProductImage

<div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper js-swiper-product-image">
    <div class="swiper-wrapper">
        @foreach (var item in Model.Images)
        {
            <div class="swiper-slide">
                <img src="@item" loading="lazy" alt="IMG" />
            </div>
        }
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
</div>
<div thumbsSlider="" class="swiper js-swiper-product-thumb">
    <div class="swiper-wrapper">
        @foreach (var item in Model.Images)
        {
            <div class="swiper-slide">
                <img src="@item" loading="lazy" alt="IMG" />
            </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
<script>
    var swiper = new Swiper(".js-swiper-product-thumb", {
        spaceBetween: 10,
        slidesPerView: 4,
        freeMode: true,
        watchSlidesProgress: true,
    });
    var swiper2 = new Swiper(".js-swiper-product-image", {
        spaceBetween: 10,
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
        thumbs: {
            swiper: swiper,
        },
    });
</script>