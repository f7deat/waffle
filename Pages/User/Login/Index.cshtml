@page
@model Waffle.Pages.User.Login.IndexModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container">
    <div class="flex justify-center">
        <div class="md:w-1/3">
            <div class="mb-4">
                <div class="title">Đăng nhập</div>
                <div class="bg-white">
                    @if (Model.SignInResult != null && !Model.SignInResult.Succeeded)
                    {
                        <div class="text-red-500 mb-4">
                            Đăng nhập thất bại
                        </div>
                    }
                    <form method="post">
                        <div class="form-item">
                            <div class="form-label">
                                <localize key="userName" />
                            </div>
                            <input type="text" class="form-control" name="UserName" placeholder="Email" required />
                        </div>
                        <div class="form-item">
                            <div class="form-label">
                                <localize key="password" />
                            </div>
                            <input type="password" class="form-control" name="Password" required placeholder="Password" />
                        </div>
                        <div class="form-item">
                            <label>
                                <input type="checkbox" />
                                <localize key="rememberMe" />
                            </label>
                        </div>
                        <div class="form-item">
                            <button class="btn btn-primary" type="submit">
                                <localize key="login" />
                            </button>
                            <button class="btn" type="reset">
                                <localize key="reset" />
                            </button>
                        </div>
                        <div class="form-item">
                            <div class="text-right">
                                <a href="/User/ForgotPassword">
                                    <localize key="forgotPassword" />    
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mb-4">
                Hoặc đăng nhập bằng
            </div>
            <div class="flex gap-4 mb-4 justify-center items-center">
                <a href="#" class="border h-12 w-12 flex justify-center items-center rounded-full hover:bg-gray-100 text-dark">
                    <i class="fab fa-facebook"></i>
                </a>
                <a href="#" class="border h-12 w-12 flex justify-center items-center rounded-full hover:bg-gray-100 text-dark">
                    <i class="fab fa-google"></i>
                </a>
            </div>
            <div class="text-center mb-4">
                Bạn chưa có tài khoản? <a href="/user/register">Đăng ký</a>
            </div>
        </div>
    </div>
</div>