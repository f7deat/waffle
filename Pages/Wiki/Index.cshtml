@page
@model Waffle.Pages.Wiki.IndexModel
@{
    ViewData["Title"] = Model.PageData.Name;
    ViewData["Description"] = Model.PageData.Description;
    ViewData["Image"] = Model.PageData.Thumbnail;
}

<div class="p-4 shadow bg-white rounded">
    <form class="flex gap-4" action="/search" method="get">
        <input class="border rounded px-4 py-2" type="search" placeholder="Nhập tên trang..." name="searchTerm">
        <button class="px-4 py-2 rounded bg-gray-800 hover:bg-gray-900 text-white hover:text-white" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
            <localize key="search" />
        </button>
    </form>
</div>