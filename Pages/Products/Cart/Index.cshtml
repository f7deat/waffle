@page
@using Waffle.Entities
@model Waffle.Pages.Products.Cart.IndexModel
@{
    ViewData["Title"] = "Giỏ hàng";
    ViewData["Description"] = "Thông tin các sản phẩm trong giỏ hàng";
}

<div class="container">
    <div class="md:flex gap-4">
        <div class="md:w-2/3 mb-4">
            <form method="post">
                <div class="title">Giỏ hàng</div>
                <div class="mb-4">
                    <div class="md:flex gap-4">
                        <div class="md:w-1/3">
                            <img src="@Model.Product.Thumbnail" alt="@Model.Product.Name" class="object-cover" loading="lazy" />
                        </div>
                        <div class="md:w-2/3">
                            <div class="font-medium text-xl mb-2">
                                <a href="@($"/product/{Model.Product.NormalizedName}")">@Model.Product.Name</a>
                            </div>
                            <div class="text-red-500 flex gap-2 text-sm mb-2">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                            <div class="text-gray-500 mb-4">
                                @Model.Product.Description
                            </div>
                            <div class="flex mb-2 gap-4 items-center">
                                <label class="form-label">Số lượng</label>
                                <input type="number" min="1" class="form-control" name="quantity" required value="1" style="width: 6rem" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-cart-shopping mr-1"></i>Mua hàng</button>
                </div>
            </form>
        </div>
        <div class="md:w-1/3 mb-4">
            <div class="title">Có thể bạn thích</div>
        </div>
    </div>
</div>
