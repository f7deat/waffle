@page
@using Waffle.Entities
@model Waffle.Pages.Products.Checkout.IndexModel
@{
    ViewData["Title"] = "Thanh toán";
    ViewData["Description"] = "Thanh toán đơn hàng";
}

<div class="container">
    <div class="md:flex gap-4">
        <div class="md:w-1/2 mb-4">
            <div class="title">Thông tin đơn hàng</div>
            @foreach (var product in Model.Products)
            {
                <div class="mb-4 border-b py-2">
                    <div class="flex gap-4">
                        <img src="@product.Thumbnail" alt="@product.Name" width="100" height="100" class="object-fit-cover" loading="lazy" />
                        <div class="flex-grow">
                            <div class="font-medium md:text-xl mb-2">
                                <a href="@($"/{CatalogType.Product}/{product.NormalizedName}")">@product.Name</a>
                            </div>
                            <div class="text-gray-500">
                                @product.Description
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="md:w-1/2 mb-4">
            <div class="title">Thông tin thanh toán</div>
            <form method="post">
                <div class="form-item">
                    <label class="form-label">Họ và Tên</label>
                    <input type="text" class="form-control" required name="name" />
                </div>
                <div class="form-item">
                    <label class="form-label">Số điện thoại</label>
                    <input type="tel" class="form-control" required name="phoneNumber" />
                </div>
                <div class="form-item">
                    <label class="form-label">Địa chỉ</label>
                    <input type="text" class="form-control" required name="address" />
                </div>
                <div class="form-item">
                    <label class="form-label">Ghi chú</label>
                    <textarea class="form-control" name="note"></textarea>
                </div>
                <div class="form-inline justify-end flex gap-4">
                    <button type="submit" class="btn btn-primary"><i class="far fa-paper-plane mr-2"></i>Đặt hàng</button>
                    <button type="reset" class="btn">Hủy bỏ</button>
                </div>
            </form>
            <div class="text-gray-500">
                Nhấn "Đặt hàng" đồng nghĩa với việc bạn đồng ý tuân theo <a href="/page/dieu-khoan">Điều khoản</a>
            </div>
        </div>
    </div>
</div>
