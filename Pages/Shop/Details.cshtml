@page "/shop/{normalizedName}"
@using Waffle.Models.Components
@model Waffle.Pages.Shop.DetailsModel
@{
    ViewData["Title"] = Model.Catalog.Name;
    ViewData["Description"] = Model.Catalog.Description;
}

<div class="container">
    <div class="wf-row gap-4">
        <div class="w-2/3">
            @await Component.InvokeAsync(nameof(Breadcrumb), Model.Catalog.Id)
            <div class="title">@Model.Catalog.Name</div>
            <div class="p-4 bg-white rounded mb-4">

            </div>
            <div class="p-4 bg-white mb-4 rounded">
            </div>
        </div>
        <div class="w-1/3">
            @await Component.InvokeAsync(nameof(ArticlePicker))
            @await Component.InvokeAsync(nameof(Tag))
        </div>
    </div>
</div>