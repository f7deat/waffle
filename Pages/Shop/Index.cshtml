@page
@using Waffle.Models.Components
@model Waffle.Pages.Shop.IndexModel

<div class="container">
    <div class="wf-row gap-4">
        <div class="w-2/3">

            <div class="title">Lựa chọn của biên tập viên</div>
            <div class="mb-4">
                @foreach (var item in Model.Products)
                {
                    <div class="grid grid-cols-4 gap-4">
                        <div class="card bg-white shadow rounded">
                            <div class="card-image">
                                <img src="@item.Thumbnail" alt="@item.Name" class="object-fit-cover" />
                            </div>
                            <div class="p-2">
                                <a href="/shop/@item.NormalizedName">
                                    @item.Name
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="title">Sản phẩm mới</div>
            <div class="mb-4 md:grid grid-cols-4 gap-4">
                @if (Model.FacebookProducts.Data != null)
                {
                    @foreach (var item in Model.FacebookProducts.Data)
                    {
                        <div class="bg-white shadow">
                            <div class="bg-gray-900">
                                <a href="@item.Url">
                                    <img src="@item.ImageUrl" alt="@item.Name" class="thumbnail-img" />
                                </a>
                            </div>
                            <div class="p-2">
                                <div class="mb-2">
                                    <a href="@item.Url">@item.Name</a>
                                </div>
                                <div class="flex justify-end gap-2 text-sm">
                                    @if (!string.IsNullOrEmpty(item.SalePrice))
                                    {
                                        <div class="text-gray-500">
                                            <s>@item.Price</s>
                                        </div>
                                        <div class="text-red-500">@item.SalePrice</div>
                                    } 
                                    else
                                    {
                                        <div class="text-red-500">@item.Price</div>   
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

        </div>
        <div class="w-1/3">
            @await Component.InvokeAsync(nameof(ArticlePicker))
            @await Component.InvokeAsync(nameof(Tag))
        </div>
    </div>
</div>