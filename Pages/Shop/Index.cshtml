@page
@model Waffle.Pages.Shop.IndexModel
@{
}

<div class="container">
    <div class="wf-row gap-4">
        <div class="md:w-2/3">
            @foreach (var item in Model.Products)
            {
                <div class="grid grid-cols-2 gap-4">
                    <div class="card">
                        <div class="card-image">
                            <img src="@item.Thumbnail" alt="@item.Name" />
                        </div>
                        <div class="card-title">
                            <a href="/shop/@item.NormalizedName">
                                @item.Name
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="md:w-1/3">
            
        </div>
    </div>
</div>