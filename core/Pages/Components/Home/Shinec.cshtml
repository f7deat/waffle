<script>
    let start // set on the first step to the timestamp provided
    const els = document.getElementsByClassName('count');
    for (let i = 0; i < els.length; i++) {
        const final = parseInt(els.item(i).textContent, 10) // parse out the final number
        const duration = 4000 // duration in ms
        const step = ts => {
            if (!start) {
                start = ts
            }
            // get the time passed as a fraction of total duration
            let progress = (ts - start) / duration

            els.item(i).textContent = Math.floor(progress * final) // set the text
            if (progress < 1) {
                // if we're not 100% complete, request another animation frame
                requestAnimationFrame(step)
            }
        }

        // start the animation
        requestAnimationFrame(step)
    }
</script>
