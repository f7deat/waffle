@using Waffle.Entities
@using Waffle.Models.Settings
@model Header
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<header id="site-header" class="site-header">

    <div class="header-topbar navbar elements-3">
        <div class="container-fluid">
            <ul class="nav topbar-ul element-left right-element-exist">
                <li>
                    <div class="menu-top-menu-container">
                        <ul id="menu-top-menu" class="nav top-menu">
                            <li class="menu-item menu-item-type-custom menu-item-object-custom dropdown">
                                <button type="button" class="dropdown-toggle btn btn-sm text-white flex gap-1 items-center" data-bs-toggle="dropdown" aria-expanded="false">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418" />
                                    </svg>
                                    <localize key="language" />
                                </button>
                                <ul class="dropdown-menu shadow">
                                    <li>
                                        <a class="dropdown-item" href="/?locale=en-US">
                                            <span role="img" aria-label="English" style="margin-right: 8px;">🇺🇸</span>
                                            English
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/?locale=zh-CN">
                                            <span role="img" aria-label="简体中文" style="margin-right: 8px;">🇨🇳</span>
                                            简体中文
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/?locale=ja-JP">
                                            <span role="img" aria-label="日本語" style="margin-right: 8px;">🇯🇵</span>
                                            日本語
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/?locale=ko-KR">
                                            <span role="img" aria-label="한국어" style="margin-right: 8px;">🇰🇷</span>
                                            한국어
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/?locale=vi-VN">
                                            <span role="img" aria-label="Tiếng Việt" style="margin-right: 8px;">🇻🇳</span>
                                            Tiếng Việt
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="menu-item menu-item-type-custom menu-item-object-custom d-flex items-center">
                                <a href="/?locale=en-US" title="en"><img src="https://longhau.com.vn/assets/images/flag-en.png" width="20" alt="en" class="border-2 border border-white rounded-full"></a>
                            </li>
                            <li class="menu-item menu-item-type-custom menu-item-object-custom d-flex items-center">
                                <a href="/?locale=zh-CN" title="ja"><img src="https://shinecgialai.com.vn/imgs/cn.png" width="20" alt="cn" class="border-2 border border-white rounded-full"></a>
                            </li>
                            <li class="menu-item menu-item-type-custom menu-item-object-custom d-flex items-center">
                                <a href="/?locale=ja-JP" title="ja"><img src="https://longhau.com.vn/assets/images/flag-ja.png" width="20" alt="ja" class="border-2 border border-white rounded-full"></a>
                            </li>
                            <li class="menu-item menu-item-type-custom menu-item-object-custom d-flex items-center">
                                <a href="/?locale=ko-KR" title="ko"><img src="https://longhau.com.vn/assets/images/flag-ko.png" width="20" alt="ko" class="border-2 border border-white rounded-full"></a>
                            </li>
                            <li class="menu-item menu-item-type-custom menu-item-object-custom d-flex items-center">
                                <a href="/?locale=vi-VN" title="vi"><img src="https://longhau.com.vn/assets/images/flag-vi.png" width="20" alt="vi" class="border-2 border border-white rounded-full"></a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul><ul class="nav topbar-ul pull-center justify-content-center right-element-exist"><li>Mon – Sat: 8.00 am – 5.00 pm</li></ul><ul class="nav topbar-ul pull-right justify-content-end right-element-exist">
                <li>
                    <ul class="nav social-icons social-transparent social-white social-h-white social-bg-white social-hbg-white" target="_blank">
                        <li><a class="social-facebook" href="https://www.facebook.com/shinecgialai/"><span class="fab fa-facebook"></span></a></li>
                        <li><a class="social-instagram" href="#"><span class="fab fa-instagram"></span></a></li>
                        <li><a class="social-whatsapp" href=""><span class="fab fa-whatsapp"></span></a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="sticky-outer" data-stickyup="0">
        <div class="sticky-head" style="top: 0px;">
            <div class="header-navbar navbar elements-3">
                <div class="container-fluid">
                    <ul class="nav navbar-ul element-left right-element-exist">
                        <li class="header-titles-wrapper">
                            <div class="header-titles">
                                <a class="site-link" href="/"><img class="img-fluid site-logo" src="https://shinecgialai.com.vn/imgs/logo.png" alt="LOGO"></a>
                            </div>
                        </li>
                    </ul>
                    <ul class="nav navbar-ul pull-center justify-content-center right-element-exist items-center">
                        <li class="header-navigation-wrapper">
                            <nav class="primary-menu-wrapper" aria-label="Horizontal">
                                <ul class="nav wp-menu primary-menu">
                                    @if (Model.NavItems != null)
                                    {
                                        @foreach (var navItem in Model.NavItems)
                                        {
                                            <li class="menu-item menu-item-type-custom menu-item-object-custom menu-item-has-children">
                                                <a href="@navItem.Href">
                                                    @navItem.Name
                                                </a>
                                                @if (navItem.Children != null && navItem.Children.Any())
                                                {
                                                    <ul class="sub-menu">
                                                        @foreach (var child in navItem.Children)
                                                        {
                                                            <li class="menu-item menu-item-type-post_type menu-item-object-page"><a href="@child.Href">@child.Name</a></li>
                                                        }
                                                    </ul>
                                                }
                                            </li>
                                        }
                                    }
                                </ul>
                            </nav>
                        </li>
                        <li class="flex items-center h-full">
                            <form method="get" action="/search">
                                <div class="rounded-full flex items-center h-10 bg-gray-100 pe-3">
                                    <input type="text" name="searchTerm" class="w-full h-full rounded-full px-3 bg-gray-100" placeholder="@Model.SearchPlaceHolder">
                                    <button class="full-search-toggle" type="submit"><i class="fa-solid fa-magnifying-glass text-gray-500"></i></button>
                                </div>
                            </form>
                        </li>
                    </ul>
                    <ul class="nav navbar-ul pull-right justify-content-end right-element-exist"><li><a href="/vr360" class="h-phone">VR 360<i class="fa-solid fa-vr-cardboard ms-2"></i></a></li></ul>
                </div>
            </div>


            <div class="header-mobilebar navbar">
                <div class="container">
                    <ul class="nav mobilebar element-left right-element-exist">
                        <li class="header-mobile-toggle-wrapper">
                            <span class="mobile-menu-toggle cursor-pointer" onclick="toggleMenu()"><i class="bi bi-list"></i></span>
                        </li>
                    </ul>
                    <ul class="nav mobilebar pull-center justify-content-center right-element-exist">
                        <li class="header-titles-wrapper">
                            <div class="header-titles">
                                <a class="site-link" href="/"><img class="img-fluid mobile-logo" src="https://shinecgialai.com.vn/imgs/logo.png" alt="LOGO"></a>
                            </div>
                        </li>
                    </ul>
                    <ul class="nav mobilebar pull-right justify-content-end right-element-exist">
                        <li class="header-search-wrapper">
                            <a class="full-search-toggle" href="/search"><i class="bi bi-search"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="mobile-menu-floating">
        <span class="mobile-menu-toggle" onclick="toggleMenu()"><i class="close-icon"></i></span>

        <div class="header-titles">
            <a class="site-link" href="/"><img class="img-fluid mobile-logo" src="https://shinecgialai.com.vn/imgs/logo.png" alt="LOGO"></a>
        </div>
        <nav class="mobile-menu-wrapper">
            <ul class="wp-menu mobile-menu">
                <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-home current-menu-item page_item page-item-66654 current_page_item current-menu-ancestor current_page_ancestor menu-item-has-children menu-item-67519">
                    <a href="/" aria-current="page">
                        <localize key="home" />
                    </a>
                    <span class="down-arrow"></span>
                </li>
                <li class="menu-item menu-item-type-custom menu-item-object-custom menu-item-has-children">
                    <a href="/">
                        <localize key="aboutUs" />
                    </a>
                    <span class="down-arrow"></span>
                </li>
                <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-has-children">
                    <a href="/@CatalogType.Product.ToString().ToLower()">
                        <localize key="Product" />
                    </a>
                    <span class="down-arrow"></span>
                </li>
                <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-has-children">
                    <a href="/@CatalogType.Article.ToString().ToLower()">
                        <localize key="Article" />
                    </a>
                    <span class="down-arrow"></span>
                </li>
                <li class="menu-item menu-item-type-custom menu-item-object-custom menu-item-has-children">
                    <a href="/contact">
                        <localize key="contact" />
                    </a>
                    <span class="down-arrow"></span>
                </li>
            </ul>
        </nav>
        <form role="search" class="form-inline search-form" action="/search">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Search" value="" name="s">
                <span class="input-group-btn">
                    <button class="btn btn-success" type="submit"><span class="bi bi-search"></span></button>
                </span>
            </div>
        </form>

    </div>

</header>

<script>
    function toggleMenu() {
        document.querySelector('body').classList.toggle('mobile-menu-active');
    }
</script>