@using Waffle.Models.Components
@model Waffle.Models.Components.Sponsor

<div class="sponsor mb-4">
    <div class="container">
        <div class="title">Sponsors</div>
        <div class="swiper js-swiper-sponsor">
            <div class="swiper-wrapper">
                @if (Model.Brands.Any())
                {
                    @foreach (var item in Model.Brands)
                    {
                        <div class="swiper-slide">
                            <div class="h-24 flex items-center justify-content-center">
                                <a href="@item.Url" aria-label="@item.Name" rel="nofollow" target="_blank">
                                    <img src="@item.Logo" alt="@item.Name" class="w-full" loading="lazy" />
                                </a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<script>

    window.onload = () => {
        function sponsorMode() {
            if (!document.querySelector('.js-swiper-sponsor')) return;
            console.log('js-swiper-sponsor')
            new Swiper(".js-swiper-sponsor", {
                spaceBetween: 30,
                loop: true,
                autoplay: true,
                breakpoints: {
                    0: {
                        slidesPerView: 2,
                    },
                    768: {
                        slidesPerView: 6
                    },
                    1024: {
                        slidesPerView: 8
                    }
                }
            });
        }
        sponsorMode();
    }
</script>